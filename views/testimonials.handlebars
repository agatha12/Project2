<div id="testi-container">
  <ul>
    {{!-- code for displaying TESTIMONIALS --}}
    {{#each testimonials}}

    <p id="testimonial">
      "{{this.review}}" - <br><strong>{{this.author}}, {{this.city}}</strong>
    </p>



    {{/each}}
  </ul>
</div>

<form id="testi-form" class="create-form">

  <div class="form-group">
    <input type="text" id="text" name="text" placeholder="We'd love to hear from you">
    <br>
    <br>
    <label for="user" id="label-name">Your Name: </label>
    <input type="text" id="name" name="name">
    <label for="place" id="label-city">City: </label>
    <input type="text" id="city" name="city">

  </div>
  <button type="submit" id="addreviewbtn" class="btn btn-dark">Add Your Review <i class="far fa-heart" id="heart"></i></button>
</form>


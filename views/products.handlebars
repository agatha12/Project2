<div id="productdisplay">
  {{#each product}}
  <div class="productdiv">
    <img class="productimg" src="{{img}}">
    <h4 id="productname"><strong>{{name}}</strong></h4>
    <p id="productprice"><strong>$ {{price}}.00</strong></p>
    <p id="productdesigner"><strong>{{designer}}</strong></p>

    <button class="cartBtn" data-id="{{id}}">Add to cart</button>

  </div>
  {{/each}}

</div>
</section>


<!-- Modal -->
<div id="cart-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="product-dump"></h4>
        <button type="button" id="closeBtn" class="close" data-dismiss="modal">&times;</button>
      </div>
      {{!-- BODY --}}
      <div class="modal-body text-center">

        {{!-- IMG DUMP --}}
        <img id="productImg" class="productimg">
        {{!-- PRICE DUMP --}}
        <h3 id="price-dump"></h3>
        {{!-- DESIGNER NAME DUMP --}}
        <h3 id="designer-dump">
          </h5>
          <form class="product-form">
            <div class="form-product">
              <label for="ca">User Name: </label>
              <input type="text" name="userName" class="firstForm" id="userName" required="required">
              <br>
              <label for="prod">Product: </label>
              <input type="text" name="product" class="firstForm" id="product" required="required">
              <br>
              <label for="place">Quantity: </label>
              <input type="text" name="quantity" class="firstForm" id="quantity" required="required">
              <br>
            </div>
            <br>
            <button type="submit" value="submit" id="submitBtn">Submit</button>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

